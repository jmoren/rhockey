!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "application", 'jquery-ui'
    = javascript_include_tag :defaults,'jquery.tipsy','autocomplete-rails.js'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      - if show_title?
        %h1= yield(:title)
      -if current_user
        Logged as
        = current_user.email
        %br
        = link_to "Sign out", destroy_user_session_path
        =# link_to "Change Pass", edit_user_password_path
        - if current_user.admin?
          %p
            = link_to "Dashboard", admin_dashboard_path
            = link_to "Equipos", teams_path
            = link_to "Entrenadores", coaches_path
            = link_to "Jugadores", players_path
            = link_to "Referis", referis_path

      = yield
