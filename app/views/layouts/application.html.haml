!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "application", "tipbox"
    = javascript_include_tag :defaults,'jquery.inputTip','jquery.tipsy'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      - if show_title?
        %h1= yield(:title)
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => "flash"
      = yield
