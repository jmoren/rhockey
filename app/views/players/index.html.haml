- title "Players"

%table
  %tr
    %th Name
    %th Lastname
    %th Email
    %th Team
    %th Edad
    %th Birthday
  - for player in @players
    %tr
      %td= player.name
      %td= player.lastname
      %td= player.email
      %td= link_to player.team.name, team_path(player.team)
      %td= player.edad
      %td= player.birthday
      %td= link_to 'Show', player
      %td= link_to 'Edit', edit_player_path(player)
      %td= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete

