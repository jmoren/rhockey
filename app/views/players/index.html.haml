- title "Players"

%table
  %tr
    %th Name
    %th Lastname
    %th Email
    %th Team
    %th Goalkeeper
    %th Age
    %th Birthday
  - for player in @players
    %tr
      %td= player.name
      %td= player.lastname
      %td= player.email
      %td= player.team_id
      %td= player.goalkeeper
      %td= player.age
      %td= player.birthday
      %td= link_to 'Show', player
      %td= link_to 'Edit', edit_player_path(player)
      %td= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Player", new_player_path
