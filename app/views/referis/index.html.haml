- title "Referis"

%table{:class => "players_team_list"}
  %tr
    %th Numero
    %th Nombre
    %th Apellido
    %th Opciones
  - @referis.each_with_index do |referi, n|
    %tr
      %td= n + 1
      %td= referi.name
      %td= referi.lastname
      %td
        %span
          %small= link_to  image_tag('lupa.png'), referi
        %span
          %small= link_to  image_tag('edit.png'), edit_referi_path(referi)
        %span
          %small= link_to image_tag('delete.png'), referi, :confirm => 'Are you sure?', :method => :d

%p= link_to "New Referi", new_referi_path
