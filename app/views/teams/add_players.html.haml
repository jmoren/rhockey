- title "Equipo #{@team.name}"
#player
  #controls
    %span.icon.icon-edit
      = link_to  "editar", edit_player_path(@team)
    %span.icon.icon-delete
      = link_to "eliminar", @team, :confirm => 'Are you sure?', :method => :delete
    %span.icon.icon-move
      = link_to "Volver", team_path(@team)
  .clearfix
  #player_info
    .player_field
      %b Nombre:
      = @team.name
    .player_field
      %b Categoria:
      = @team.category.name
    .player_field
      %b Entrenadores
      - unless @team.coaches
        - @team.coaches.each do |c|
          = c.name
          = c.lastname
      - else
        #flash_alert
          No tiene entrenador!
#add_players
  #players_list
    = render :partial => 'shared/players', :object => @team
  #add_player
    = render 'players/add_player'
  .clearfix
